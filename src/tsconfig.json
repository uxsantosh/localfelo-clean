{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* Module interop */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "/components/*": ["./components/*"],
      "/screens/*": ["./screens/*"],
      "/types": ["./types"],
      "/services/*": ["./services/*"],
      "/constants/*": ["./constants/*"],
      "/config/*": ["./config/*"],
      "/utils/*": ["./utils/*"],
      "/lib/*": ["./lib/*"],
      "/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "main.tsx",
    "vite-env.d.ts",
    "src/**/*",
    "App.tsx",
    "components/**/*.tsx",
    "screens/**/*",
    "services/**/*",
    "types/**/*",
    "config/**/*",
    "constants/**/*",
    "lib/**/*",
    "utils/**/*",
    "assets/**/*"
  ],
  "exclude": ["node_modules", "dist", "components/admin"],
  "references": [{ "path": "./tsconfig.node.json" }]
}